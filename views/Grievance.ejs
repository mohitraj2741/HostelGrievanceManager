<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title></title>
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="../css/grievanceStyles.css">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        
    </head>
    <body>
        
        <div class="content">

             <div class="complaint" >
 
                 <h1 id="status">Total Grievances</h1>
 
                 <div class="container">
                     <div class="contentt">
                        <table class="gtable table table-dark table-striped table-hover">
                            <thead>
                              <tr>
                                <th scope="col">#</th>
                                <th scope="col">Grievance ID</th>
                                <th scope="col">RoomNo</th>
                                <th scope="col">Category</th>
                                <th scope="col">Date</th>
                                <th scope="col">Status</th>
                                <th scope="col">Message</th>
                              </tr>
                            </thead>
                            <tbody>
    
                            <%  for(var i=0;i<Grecords.length;i++){ %>
    
                              <tr>
                                <th scope="row"><%= i+1 %></th>
                                <td><%=Grecords[i].G_id %></td>
                                <td><%=Grecords[i].Room_No %></td>
                                <td><%=Grecords[i].category %></td>
                                <td><%=Grecords[i].Request_date %></td>
                                <form action="/showMessages/<%=Grecords[i].G_id%>" method="get"><td><button class="btn-lg btn-warning" type="submit">Description</button></td></form>
                              <!-- thik kar lena isme error h -->
                              <form action="/showGrievances/<%=Grecords[i].G_id%>" method="get"><td><button class="btn-lg btn-success" type="submit">Resolve</button></td></form>
                              </tr>
    
                              <% } %>
    
    
                            </tbody>
                          </table>
                     </div>
                   </div>
                 
 
             </div>
        
         </div>
        
    </body>
</html>