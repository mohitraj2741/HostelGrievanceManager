<html lang="en" dir="ltr">
  <head>
    <meta charset="UTF-8">
    <!--<title> Login and Registration Form in HTML & CSS | CodingLab </title>-->
    <link rel="stylesheet" href="css/adminLoginStyles.css">
<!--change dirname -->

    <!-- Fontawesome CDN Link -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
   </head>
<body>
  <div class="container">
    <% if(message.length > 0) { %>
      <div class="alert">
        <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
        <%= message %>
      </div>
      <% } %>
    <input type="checkbox" id="flip">
    <div class="cover">
      <div class="front">
        <img src="images/complaintLogin.jpg" alt=""><!--change dirname -->
        <!-- <div class="text">
          <span class="text-1">Have any complaints?</span>
          <span class="text-2">Let's get started</span>
        </div> -->
      </div>
      <div class="back">
        <img class="backImg" src="images/grievanceSignup.jpg" alt=""><!--change dirname -->
        <!-- <div class="text">
          <span class="text-1">Complete miles of journey <br> with one step</span>
          <span class="text-2">Let's get started</span>
        </div> -->
      </div>
    </div>
    <div class="forms">
        <div class="form-content">
          <div class="login-form">
            <div class="title">Login</div>
     <form action="/AdminPortal" method="post">
            <div class="input-boxes">
              <div class="input-box">
                <i class="fas fa-envelope"></i>
                <input type="text" placeholder="Enter your email" name="LoginAEmail" required>
              </div>
              <div class="input-box">
                <i class="fas fa-lock"></i>
                <input type="password" placeholder="Enter your password" name="LoginAPass" required>
              </div>
              <div class="text"><a href="#">Forgot password?</a></div>
              <div class="button input-box">
                <input type="submit" value="Submit">
              </div>
              <div class="text sign-up-text">Don't have an account? <label for="flip">Sigup now</label></div>
            </div>
    </form>
      </div>
        <div class="signup-form">
          <div class="title">Signup</div>
     <form action="/AdminLogin" method="post">
            <div class="input-boxes">

              <div class="input-box">
                <i class="fas fa-university"></i>
                <input type="text" placeholder="Enter the college name" name="EnterCname" required>
              </div>

              <div class="input-box">
                <i class="fas fa-graduation-cap"></i>
                <input type="text" placeholder="Enter the college code" name="EnterCcode" required>
              </div>

              <div class="input-box">
                <i class="fas fa-user"></i>
                <input type="text" placeholder="Enter warden name" name="EnterWname" required>
              </div>
              <div class="input-box">
                <i class="fas fa-envelope"></i>
                <input type="text" placeholder="Enter your email" name="EnterCemail" required>
              </div>
              <div class="input-box">
                <i class="fas fa-lock"></i>
                <input type="password" placeholder="Enter your password" name="EnterCpass" required>
              </div>

              <div class="input-box">
                <i class="fas fa-phone"></i>
                <input type="tel" placeholder="Enter your phone number" name="EnterCphone" required>
              </div>

              <div class="button input-box">
                <input type="submit" value="Submit">
              </div>


              <div class="text sign-up-text">Already have an account? <label for="flip">Login now</label></div>
            </div>
      </form>
    </div>
    </div>
    </div>
  </div>
</body>
</html>
